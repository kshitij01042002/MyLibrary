<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".LibrarianPage"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="137dp"
            android:layout_height="137dp"
            app:srcCompat="@drawable/tt" />

        <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add book" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/issue"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="issue book" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/findbynumber"
            android:background="@drawable/buttons"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="find book by number" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/findbyname"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="find book by name" />



        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:id="@+id/returnbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="return book" />
    </LinearLayout>
    </LinearLayout>

</ScrollView>