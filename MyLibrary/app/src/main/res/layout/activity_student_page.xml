<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentPage"
    android:padding="30dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="137dp"
            android:layout_height="137dp"
            app:srcCompat="@drawable/tt" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:id="@+id/returnbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return book" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:id="@+id/issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Book" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/buttons"
            android:id="@+id/findbyname"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Book by Name"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/buttons"
            android:id="@+id/findbynumber"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Book by Number"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>